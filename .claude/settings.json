{
    "hooks": {
      "PreToolUse": [
        {
          "matcher": "*",
          "hooks": [
            {
              "type": "command",
              "command": "CLAUDE_HOOK_TYPE=PreToolUse python3 $CLAUDE_PROJECT_DIR/.claude/hooks/tool_logger.py"
            }
          ]
        },
        {
          "matcher": "Write|Edit",
          "hooks": [
            {
              "type": "command",
              "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/analysis_path_redirector.py"
            },
            {
              "type": "command",
              "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/analyst_json_validator.py"
            }
          ]
        }
      ],
      "PostToolUse": [
        {
          "matcher": "*",
          "hooks": [
            {
              "type": "command",
              "command": "CLAUDE_HOOK_TYPE=PostToolUse python3 $CLAUDE_PROJECT_DIR/.claude/hooks/tool_logger.py"
            }
          ]
        }
      ],
      "Stop": [
        {
          "matcher": "*",
          "hooks": [
            {
              "type": "command",
              "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/after_response.py"
            }
          ]
        }
      ]
    }
  }